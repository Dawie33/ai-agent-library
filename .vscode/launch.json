{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NestJS Backend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}